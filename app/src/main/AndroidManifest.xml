<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softcodes.wework">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/getajob"
        android:label="@string/app_name"
        android:roundIcon="@drawable/getajob"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".candidate.ApplyNow"></activity>
        <activity android:name=".candidate.JobDetails"
            android:theme="@style/AppThemesoftcodes2"
            android:parentActivityName=".candidate.CandidateDashboard"
            android:label="JobDetails"/>
        <activity
            android:name=".candidate.MySavedJobs"
            android:label="My saved Jobs"
            android:parentActivityName=".candidate.CandidateDashboard"
            android:theme="@style/AppThemesoftcodes" />
        <activity
            android:name=".candidate.MyAppliedJobs"
            android:label="Applied Jobs"
            android:parentActivityName=".candidate.CandidateDashboard"
            android:theme="@style/AppThemesoftcodes" />
        <activity
            android:name=".candidate.AllJobs"
            android:label="Jobs"
            android:parentActivityName=".candidate.CandidateDashboard"
            android:theme="@style/AppThemesoftcodes" />
        <activity
            android:name=".candidate.Myprofile"
            android:label="My Profile"
            android:parentActivityName=".candidate.CandidateDashboard"
            android:theme="@style/AppThemesoftcodes" />
        <activity
            android:name=".candidate.SendApplication"
            android:label="Submit Application"
            android:parentActivityName=".candidate.CandidateDashboard"
            android:theme="@style/AppThemesoftcodes" />
        <activity
            android:name=".employeer.jobs.dashboard.EditMyJob"
            android:label="Edit Job"
            android:parentActivityName=".employeer.jobs.dashboard.EmployerDashboard"
            android:theme="@style/AppThemesoftcodes" />
        <activity
            android:name=".candidate.JobsList"
            android:label="Current Jobs"
            android:parentActivityName=".candidate.CandidateDashboard"
            android:theme="@style/AppThemesoftcodes" />
        <activity
            android:name=".employeer.jobs.dashboard.Applicants_Employer"
            android:label="Applicants List"
            android:parentActivityName=".employeer.jobs.dashboard.EmployerDashboard"
            android:theme="@style/AppThemesoftcodes" />
        <activity android:name=".employeer.jobs.dashboard.EmployerMyJObs" />
        <activity android:name=".employeer.jobs.dashboard.SearchCandidates" />
        <activity
            android:name=".employeer.jobs.dashboard.PostJob"
            android:label="Post Job"
            android:parentActivityName=".employeer.jobs.dashboard.EmployerDashboard"
            android:theme="@style/AppThemesoftcodes" />
        <activity android:name=".activities.SignupEmployer" />
        <activity
            android:name=".activities.SignupAs"
            android:label="SignUp As"
            android:parentActivityName=".activities.Login"
            android:theme="@style/AppThemesoftcodes" />
        <activity android:name=".candidate.CandidateDashboard" />
        <activity android:name=".employeer.jobs.dashboard.EmployerDashboard" />
        <activity android:name=".guest.GuestDashboard" />
        <activity android:name=".activities.ForgotPassword" />
        <activity android:name=".activities.Login" />
        <activity android:name=".activities.SignUpCandidate" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>