<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6">


            <ImageView
                android:id="@+id/img_backd"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:padding="0dp"
                android:src="@drawable/left" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">


                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/lvl_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">


                        <ImageView
                            android:id="@+id/img_cart"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:padding="15dp"
                            android:src="@drawable/getajob" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Job Name:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:fontFamily="@font/opensansregular"
                            android:layout_marginStart="20dp"
                            android:text="Cleaner"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Job Ref ID:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbref_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:fontFamily="@font/opensansregular"
                            android:layout_marginStart="20dp"
                            android:text="S0097"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Location:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jblocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="Kamukuzi Mbarara"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Category:"
                            android:textColor="#BDB0B0" />

                        <TextView
                            android:id="@+id/jbcategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="Full Time"
                            android:textColor="@color/black"
                            android:fontFamily="@font/opensansregular"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Salary:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbsalary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="150,000"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Application Deadline :"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbdeadline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="12/12/2020"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Skills Required:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbskills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="Able bodied"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Company Name:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbcomp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="Softcodes"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Phone:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbphone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="+256 759 02020277"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Website:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbwebsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="www.softcodes.tech"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Qualification Needed:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbqualification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="O'level"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Experience:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbexperience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="2 years doing the same job"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Work Time:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbwork_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="Mon- Sat"
                            android:fontFamily="@font/opensansregular"
                            android:textColor="@color/colorBalck"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansregular"
                            android:text="Description:"
                            android:textColor="@color/outdated" />

                        <TextView
                            android:id="@+id/jbdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:fontFamily="@font/opensansregular"
                            android:text="\Cleaning compound and at times doing some farm work!"
                            android:textColor="@color/colorBalck"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/apply_today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/rounded_button"
                        android:layout_marginBottom="40dp"
                        android:text="Apply Now"
                        android:fontFamily="@font/opensansregular"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</ScrollView>