<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsignin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activities.ForgotPassword">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_opacity">
        <LinearLayout
            android:id="@+id/fields_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/getajob_white"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"

                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="50dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_forgotpassword"
                    android:textSize="18sp"
                    android:text="@string/ForogotPassword"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="15dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginEnd="15dp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/txt_forgotpassword"
                    android:layout_marginStart="18dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"

                    android:background="@drawable/headinunderline"
                    android:id="@+id/viw1"
                    android:layout_marginLeft="18dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:id="@+id/fields_container"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:id="@+id/edittxt_email"
                        android:background="@drawable/emailaddress"
                        android:padding="10dp"
                        android:hint="Enter Registered Email"
                        android:inputType="textEmailAddress"
                        android:paddingTop="10dp"
                        android:drawablePadding="20dp"
                        android:layout_marginTop="65dp"
                        android:paddingEnd="20dp"
                        android:drawableEnd="@drawable/ic_mail"
                        android:theme="@style/ThemeSpinnerBlue"
                        android:textAlignment="viewStart"
                        android:layout_gravity="start"
                        android:paddingRight="20dp"
                        android:drawableRight="@drawable/ic_mail" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/btn_submit"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/app_blue"
                        android:background="@drawable/rounded_button"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:text="Submit"
                        />
                    <!--
                      -->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="back_to_login"
                        android:layout_gravity="center"
                        android:background="@drawable/circleback"
                        android:src="@drawable/ic_iconsvg"
                        />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
