<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:id="@+id/viewdd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/green" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:text="Job Status:"
                    android:textColor="@color/outdated" />

                <TextView
                    android:id="@+id/aplicstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginStart="20dp"
                    android:text="Accepted"
                    android:textColor="@color/green"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:text="Job Name:"
                    android:textColor="@color/outdated" />

                <TextView
                    android:id="@+id/aplicname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginStart="20dp"
                    android:text="Cleaner"
                    android:textColor="@color/green"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:text="Job Ref ID:"
                    android:textColor="@color/outdated" />

                <TextView
                    android:id="@+id/aplicref_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:fontFamily="@font/opensansregular"
                    android:layout_marginStart="20dp"
                    android:text="S0097"
                    android:textColor="@color/colorBalck"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:text="Location:"
                    android:textColor="@color/outdated" />

                <TextView
                    android:id="@+id/apliclocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Kamukuzi Mbarara"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/colorBalck"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:text="Salary:"
                    android:textColor="@color/outdated" />

                <TextView
                    android:id="@+id/aplicsalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="150,000"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/google_red"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:text="Application Deadline :"
                    android:textColor="@color/outdated" />

                <TextView
                    android:id="@+id/aplicdeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="12/12/2020"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/grey"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansregular"
                    android:text="Company Name:"
                    android:textColor="@color/outdated" />

                <TextView
                    android:id="@+id/apliccomp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Softcodes"
                    android:fontFamily="@font/opensansregular"
                    android:textColor="@color/colorBalck"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:id="@+id/viewd"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="10dp"
                android:background="@color/green" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/aplicapply_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/rounded_button"
                android:layout_marginBottom="40dp"
                android:text="Apply Now"
                android:fontFamily="@font/opensansregular"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>