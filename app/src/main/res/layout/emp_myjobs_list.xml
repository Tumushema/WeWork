<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".employeer.jobs.dashboard.EmployerMyJObs">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spare_part_listed"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:ignore="UselessParent">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/getajob"
                android:id="@+id/myjob_image">
            </ImageView>

            <TextView
                android:id="@+id/myjob_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cleaning compound"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/opensanslight"
                android:layout_marginTop="40dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/myjob_image"/>
            <TextView
                android:id="@+id/myjob_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_below="@id/myjob_name"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/myjob_image"
                android:fontFamily="@font/opensanslight"
                android:text="kiswahili prisons kakoba Mbarara"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FF5722"
                android:layout_below="@id/myjob_location"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/myjob_image"
                android:fontFamily="@font/opensanslight"
                android:text="Closing Date"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/myjob_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:layout_below="@id/myjob_location"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/posted"
                android:fontFamily="@font/opensanslight"
                android:text="11/11/2020"
                android:layout_marginLeft="5dp" />

          
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Job"
                android:fontFamily="@font/opensansregular"
                android:id="@+id/editmyjob"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:layout_toRightOf="@id/myjob_post_date"
                android:layout_below="@id/posted"
                android:textColor="@color/colorPrimary"
                android:layout_toEndOf="@id/myjob_image"
                android:layout_marginStart="8dp"
               />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Job"
                android:fontFamily="@font/opensansregular"
                android:id="@+id/deletemyjob"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:layout_toRightOf="@id/myjob_post_date"
                android:layout_below="@id/posted"
                android:textColor="@color/google_red"
                android:layout_toEndOf="@id/editmyjob"
                android:layout_marginStart="15dp"
                />

           
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>